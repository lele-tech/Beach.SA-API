@model Beach.SA.Models.Usuario

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5 d-flex justify-content-center align-items-center" style="min-height: 100vh; background: #f8f9fa;">
    <div class="row shadow-lg" style="width: 700px; border-radius: 8px; background: white;">
        <!-- Columna del formulario -->
        <div class="col-md-6 p-4 d-flex flex-column justify-content-center" style="min-height: 500px;">
            <h2 class="text-center text-primary mb-4">Login</h2>

            @* Mensaje de errores *@
            @if (TempData["Mensaje"] != null)
            {
                <div class="alert alert-warning alert-dismissible fade show" role="alert">
                    <strong>@TempData["Mensaje"]</strong>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <form asp-action="Login" id="FormularioLogin">
                @* Email *@
                <div class="form-group mb-3">
                    <label asp-for="Email" class="form-label d-block text-center">Correo Electrónico</label>
                    <input asp-for="Email" class="form-control shadow-sm" placeholder="example@gmail.com" style="border-radius: 6px;" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                @* Contraseña *@
                <div class="form-group mb-4">
                    <label asp-for="Password" class="form-label d-block text-center">Contraseña</label>
                    <input asp-for="Password" class="form-control shadow-sm" type="password" style="border-radius: 6px;" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                    
                </div>

                @* Botón Aceptar *@
                <div class="d-grid">
                    <button type="submit" class="btn btn-secundario btn-lg" style="border-radius: 6px;">Aceptar</button>
                </div>
            </form>
        </div>

        <!-- Columna de la imagen -->
        <div class="col-md-6 d-none d-md-block p-0">
            <img src="~/images/login.jpg" alt="Imagen de login" class="img-fluid" style="height: 100%; object-fit: cover; border-radius: 0 8px 8px 0;" />
        </div>
    </div>
</div>
